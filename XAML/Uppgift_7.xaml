<Window x:Class="XAML.Uppgift_7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAML"
        mc:Ignorable="d"
        FontSize="20"
        Title="Uppgift_7" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>


        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.Column="0"
               VerticalAlignment="Top" HorizontalAlignment="Right"
               Margin="0,61,212,0" Width="113" Height="39">FirstName:</Label>
        <TextBox Grid.Row="0" Grid.Column="0"
                 Margin="75,100,100,80"/>

        <Label Grid.Row="0" Grid.Column="1" 
               VerticalAlignment="Top" HorizontalAlignment="Right"
               Margin="0,63,75,0" Width="225">Lastname:</Label>
        <TextBox Grid.Row="0" 
                 Margin="100,100,73,80" Grid.Column="1"/>

        <Label Grid.Row="1" Grid.Column="0" 
               VerticalAlignment="Top" HorizontalAlignment="Right"
               Margin="0,63,212,0" Width="113">Email:</Label>
        <TextBox Grid.Column="0" 
                 Margin="75,100,100,80" Grid.Row="1"/>

        <Button VerticalContentAlignment="Center" Content="Cancel" Margin="80,100,220,80" Grid.Column="1" Grid.Row="1"/>
        <Button VerticalContentAlignment="Center" Content="OK" Margin="220,100,75,80" Grid.Column="1" Grid.Row="1"/>
    </Grid>
</Window>
