<Window x:Class="XAML.Uppgift_8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XAML"
        mc:Ignorable="d"
        FontSize="20"
        Title="Uppgift_8" Height="450" Width="800">
    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0" >
            <Label Width="300">Students</Label>
            <ListBox x:Name="StudentList" Height="300" Width="300">
                <ListBoxItem>Kalle Andersson</ListBoxItem>
                <ListBoxItem>Anders Karlsson</ListBoxItem>
                <ListBoxItem>Camilla Johansson</ListBoxItem>
                <ListBoxItem>Johan Svensson</ListBoxItem>
                <ListBoxItem>Mia Karlsson</ListBoxItem>
            </ListBox>
            
        </StackPanel>

        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center"
                    Orientation="Vertical"
                    Width="300">
            <Label>FirstName:</Label>
            <TextBox x:Name="FirstNameBox" Margin="0, 0, 0, 10"/>
            <Label>LastName:</Label>
            <TextBox x:Name="LastNameBox" Margin="0, 0, 0, 10"/>
            <Label>Email:</Label>
            <TextBox x:Name="EmailBox" Margin="0, 0, 0, 20"/>

            <Button HorizontalAlignment="Center" Width="100"
                    Content="OK" Click="OkButton_Click"/>

        </StackPanel>
    </Grid>
</Window>
